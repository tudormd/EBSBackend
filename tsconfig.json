{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,   
        "allowJs": true,
        "module": "commonjs", 
        "moduleResolution": "node",
        "noImplicitAny": true,
        "pretty": true,
        "sourceMap": true,
        "target": "es6",
        "outDir": "dist",
        "baseUrl": ".",
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}